#include<stdio.h>
#include<conio.h>
#include<alloc.h>
struct node
{
int data;
struct node* next;
};
void addatfirst(struct node**,int);
void display(struct node*);
void main()
{
clrscr();
struct node* start=NULL;
int option=1,n;
while(option)
{
printf("Do you want to enter an element ? Press 1 for Yes & 0 for No :\n");
scanf("%d",&option);
if(option==0)
{
break;
}
else
{
printf("\nEnter The Element : ");
scanf("%d",&n);
addatfirst(&start,n);
//addatfirst(&start,5);
display(start);
getch();
}
void addatfirst(struct node** p,int num)
{
struct node* temp=(struct node*)malloc(sizeof(struct node));
temp->data=num;
temp->next=*p;
*p=temp;
}
void display(struct node* p)
{ if(p==NULL)
   printf("list is empty");
   else
   {
     while(p!=NULL)
     {
       printf("\n element is %d",p->data);
       p=p->next;
     }
   }
}

